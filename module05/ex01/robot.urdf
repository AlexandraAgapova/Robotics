<?xml version="1.0"?>
<robot name="glam_bot_v2">

  <!-- COLORS -->
  <material name="hot_pink">
    <color rgba="1.0 0.41 0.7 1.0"/>
  </material>
  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
  <material name="yellow">
    <color rgba="1.0 1.0 0.0 1.0"/>
  </material>

  <!-- BASE LINK (Ground Level) -->
  <!-- This is the root link located on the floor (0,0,0) -->
  <link name="base_link"/>

  <!-- BODY LINK (Main Chassis) -->
  <link name="body_link">
    <visual>
      <geometry>
        <box size="0.6 0.4 0.2"/>
      </geometry>
      <material name="hot_pink"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.6 0.4 0.2"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Connect Base to Body and LIFT IT UP -->
  <joint name="base_to_body" type="fixed">
    <parent link="base_link"/>
    <child link="body_link"/>
    <!-- Z = 0.15 lifts the body so wheels touch the ground -->
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
  </joint>

  <!-- CABIN -->
  <link name="cabin_link">
    <visual>
      <geometry>
        <box size="0.3 0.35 0.15"/>
      </geometry>
      <material name="hot_pink"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.35 0.15"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="cabin_joint" type="fixed">
    <parent link="body_link"/>
    <child link="cabin_link"/>
    <origin xyz="-0.05 0 0.175" rpy="0 0 0"/>
  </joint>

  <!-- WHEELS -->
  <!-- Left Wheel -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black"/>
      <origin rpy="1.5708 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <origin rpy="1.5708 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="body_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.15 0.225 -0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Right Wheel -->
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black"/>
      <origin rpy="1.5708 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <origin rpy="1.5708 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="body_link"/>
    <child link="right_wheel"/>
    <origin xyz="-0.15 -0.225 -0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Caster Wheel -->
  <link name="caster_wheel">
    <visual>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="caster_joint" type="fixed">
    <parent link="body_link"/>
    <child link="caster_wheel"/>
    <origin xyz="0.2 0 -0.1" rpy="0 0 0"/>
  </joint>

  <!-- HEADLIGHTS -->
  <!-- Left Eye -->
  <link name="left_eye">
    <visual>
      <geometry>
        <cylinder radius="0.06" length="0.02"/>
      </geometry>
      <material name="yellow"/>
      <origin rpy="0 1.5708 0"/>
    </visual>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="left_eye_joint" type="fixed">
    <parent link="body_link"/>
    <child link="left_eye"/>
    <origin xyz="0.3 0.12 0.05" rpy="0 0 0"/>
  </joint>

  <!-- Right Eye -->
  <link name="right_eye">
    <visual>
      <geometry>
        <cylinder radius="0.06" length="0.02"/>
      </geometry>
      <material name="yellow"/>
      <origin rpy="0 1.5708 0"/>
    </visual>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="right_eye_joint" type="fixed">
    <parent link="body_link"/>
    <child link="right_eye"/>
    <origin xyz="0.3 -0.12 0.05" rpy="0 0 0"/>
  </joint>

  <!-- EYELASHES -->
  <!-- Left Eye Lashes -->
  <link name="l_lash_1">
    <visual>
      <geometry> <box size="0.01 0.005 0.05"/> </geometry>
      <material name="black"/>
    </visual>
    <inertial> <mass value="0.001"/> <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/> </inertial>
  </link>
  <joint name="l_lash_1_j" type="fixed">
    <parent link="left_eye"/>
    <child link="l_lash_1"/>
    <origin xyz="0.01 0 0.06" rpy="0 0 0"/>
  </joint>

  <link name="l_lash_2">
    <visual>
      <geometry> <box size="0.01 0.005 0.05"/> </geometry>
      <material name="black"/>
    </visual>
    <inertial> <mass value="0.001"/> <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/> </inertial>
  </link>
  <joint name="l_lash_2_j" type="fixed">
    <parent link="left_eye"/>
    <child link="l_lash_2"/>
    <origin xyz="0.01 0.03 0.05" rpy="0 0 -0.3"/>
  </joint>

  <link name="l_lash_3">
    <visual>
      <geometry> <box size="0.01 0.005 0.05"/> </geometry>
      <material name="black"/>
    </visual>
    <inertial> <mass value="0.001"/> <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/> </inertial>
  </link>
  <joint name="l_lash_3_j" type="fixed">
    <parent link="left_eye"/>
    <child link="l_lash_3"/>
    <origin xyz="0.01 -0.03 0.05" rpy="0 0 0.3"/>
  </joint>

  <!-- Right Eye Lashes -->
  <link name="r_lash_1">
    <visual>
      <geometry> <box size="0.01 0.005 0.05"/> </geometry>
      <material name="black"/>
    </visual>
    <inertial> <mass value="0.001"/> <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/> </inertial>
  </link>
  <joint name="r_lash_1_j" type="fixed">
    <parent link="right_eye"/>
    <child link="r_lash_1"/>
    <origin xyz="0.01 0 0.06" rpy="0 0 0"/>
  </joint>

  <link name="r_lash_2">
    <visual>
      <geometry> <box size="0.01 0.005 0.05"/> </geometry>
      <material name="black"/>
    </visual>
    <inertial> <mass value="0.001"/> <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/> </inertial>
  </link>
  <joint name="r_lash_2_j" type="fixed">
    <parent link="right_eye"/>
    <child link="r_lash_2"/>
    <origin xyz="0.01 0.03 0.05" rpy="0 0 -0.3"/>
  </joint>

  <link name="r_lash_3">
    <visual>
      <geometry> <box size="0.01 0.005 0.05"/> </geometry>
      <material name="black"/>
    </visual>
    <inertial> <mass value="0.001"/> <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/> </inertial>
  </link>
  <joint name="r_lash_3_j" type="fixed">
    <parent link="right_eye"/>
    <child link="r_lash_3"/>
    <origin xyz="0.01 -0.03 0.05" rpy="0 0 0.3"/>
  </joint>

</robot>
